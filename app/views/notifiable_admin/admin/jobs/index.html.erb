<h1>Schedule</h1>

<div class="col-md-12">
  <div class="row">
    <table class="table">
      <tr>
        <th>Start(ed) At</th>
        <th>Message</th>        
        <th>Sent</th>
        <th>Error</th>
        <th>Actions</th>
      </tr>
      <% @jobs.each do |j| %>
        <% n = Notifiable::Notification.find(j.notification_id) %>
        <tr class="job-row">
          <td><%= j.run_at %></td>
          <td><%= truncate(n.localized_notifications.first.message, :length => 50) if n.localized_notifications.first %></td>
          <td><%= n.sent_count %></td>
          <td><%= truncate(j.last_error, :length => 50) if j.last_error %></td>
          <td><%= delete_button(admin_account_app_job_path(@account, @app, j)) %>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<%= paginate @jobs, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-sm" %>
