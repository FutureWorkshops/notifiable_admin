<div class="row"><div class="col-md-4">

<%= simple_form_for [:admin, @account, @app] do |f| %>

  <%= f.input :name %>

  <h4>APNS</h4>

  <%= f.input :apns_certificate, :as => :text, :label => "Certificate" %>
  
  <%= f.input :apns_passphrase, :label => "Passphrase" %>
  
  <%= f.input :apns_sandbox, :as => :boolean, :label => "Sandbox" %>
  
  <hr/>
  
  <%= f.submit :class => "btn btn-default" %>    

<% end %>

</div></div>