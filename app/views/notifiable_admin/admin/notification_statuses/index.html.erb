<h1>Notification Statuses</h1>

<div class="col-md-12">
  <div class="row">
    <table class="table">
      <tr>
        <th>Date</th>
        <th>User</th>
        <th>Device</th>
        <th>Provider</th>
        <th>Status</th>
      </tr>
      <% @notification_statuses.each do |ns| %>
        <tr class="notification-status-row">
          <td><%= ns.created_at %></td>
          <td><%= link_to(ns.device_token.user.alias, admin_account_app_user_path(@account, @app, ns.device_token.user)) if ns.device_token.user %></td>   
          <td><%= ns.device_token.name %></td>
          <td><%= ns.device_token.provider %></td>
          <td><%= ns.status %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<%= paginate @notification_statuses, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-sm" %>

