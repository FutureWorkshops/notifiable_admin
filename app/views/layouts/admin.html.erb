  <body>
    <%= render "layouts/#{current_admin.role}_navbar"%>

    <% if Rails.env.production? %>
      <div class="alert alert-danger" style="text-align: center;">
        WARNING - PRODUCTION SYSTEM.
      </div>
    <% end %>

    <div class="container">
      
      <%= render "layouts/messages" %>
      
      <%= yield %>

    </div>
    
    <%= render "layouts/footer" %>
  </body>  
</html>
